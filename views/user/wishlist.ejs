			async function removeFromWishlist(productId) {
    try {
        const response = await fetch(`/wishlist/remove/${productId}`, { method: 'DELETE' });

        // Check if the response is successful
        if (response.ok) {
            // If successful, reload the page or update the UI
            location.reload();  // Reload the page
        } else {
            // If the response was not successful, log the error message
            const result = await response.json();
            console.error(result.error);  // Show the error message from the backend
        }
    } catch (error) {
        console.error('Error while removing from wishlist:', error);
    }
}

