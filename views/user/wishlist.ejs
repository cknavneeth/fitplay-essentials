		  <!-- Page item Area -->
		  <div id="page_item_area">
			<div class="container">
				<div class="row">
					<div class="col-sm-6 text-left">
						<h3>Wishlist</h3>
					</div>        
		
					<div class="col-sm-6 text-right">
						<ul class="p_items">
							<li><a href="#">home</a></li>
