
<%- include("../../views/layout/user/header",{user:user}) %>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Address</title>
    <style>
        .edit-address body {
    font-family: Arial, sans-serif;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
}

.edit-address .container {
    width: 50%;
    margin: 50px auto;
    background-color: #ffffff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

    

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-size: 14px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        .form-group input[type="text"],
        .form-group input[type="tel"],
        .form-group select {
            width: calc(50% - 10px);
        }

        .form-group textarea {
            width: 100%;
            resize: none;
        }

        .form-group.address-type {
            display: flex;
            align-items: center;
        }

        .form-group.address-type input {
            margin-right: 5px;
        }

        .form-group.address-type label {
            margin-right: 20px;
        }

        .form-group .buttons {
            display: flex;
            justify-content: space-between;
        }

        .form-group .buttons button {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

        .form-group .buttons .save-btn {
            background-color: #007bff;
            color: #ffffff;
        }

        .form-group .buttons .cancel-btn {
            background-color: transparent;
            color: #007bff;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .container {
                width: 90%;
                margin: 20px auto;
            }

            .form-group input[type="text"],
            .form-group input[type="tel"],
            .form-group select {
                width: 100%;
            }
        }

        @media (max-width: 480px) {
            h1 {
                font-size: 20px;
            }

            .form-group input,
            .form-group select,
            .form-group textarea {
                font-size: 12px;
            }

            .form-group .buttons button {
                font-size: 12px;
                padding: 8px 16px;
            }
        }
    </style>
</head>
<body >
    <div class="container edit-address">
        <h1>Edit Address</h1>
        <form action="/editAddress/<%= address._id %>" method="POST">
            <div class="form-group">
                <input type="text" name="name" placeholder="Name" value="<%= address.name %>" required>
                <input type="tel" name="mobile" placeholder="10-digit mobile number" pattern="[0-9]{10}" value="<%= address.mobile %>" required>
            </div>
            <div class="form-group">
                <input type="text" name="pincode" placeholder="Pincode" value="<%= address.pincode %>" required>
                <input type="text" name="locality" placeholder="Locality" value="<%= address.locality %>" required>
            </div>
            <div class="form-group">
                <textarea name="address" rows="3" placeholder="Address (Area and Street)" required><%= address.address %></textarea>
            </div>
            <div class="form-group">
                <input type="text" name="city" placeholder="City/District/Town" value="<%= address.city %>" required>
                <select name="state" required>
                    <option value="">--Select State--</option>
                    <option value="Kerala" <%= address.state === 'Kerala' ? 'selected' : '' %>>Kerala</option>
                    <option value="Tamil Nadu" <%= address.state === 'Tamil Nadu' ? 'selected' : '' %>>Tamil Nadu</option>
                    <!-- Add more states as needed -->
                </select>
            </div>
            <div class="form-group">
                <input type="text" name="landmark" placeholder="Landmark (Optional)" value="<%= address.landmark %>">
                <input type="tel" name="alternate_phone" placeholder="Alternate Phone (Optional)" pattern="[0-9]{10}" value="<%= address.alternate_phone %>">
            </div>
            <div class="form-group address-type">
                <label>Address Type</label>
                <div class="radio-option">
                    <input type="radio" name="address_type" value="home" <%= address.address_type === 'home' ? 'checked' : '' %>> Home
                </div>
                <div class="radio-option">
                    <input type="radio" name="address_type" value="work" <%= address.address_type === 'work' ? 'checked' : '' %>> Work
                </div>
            </div>
            <div class="form-group buttons">
                <button type="submit" class="save-btn">SAVE</button>
                <button type="reset" class="cancel-btn">CANCEL</button>
            </div>
        </form>
    </div>
</body>
</html>

<%- include("../../views/layout/user/footer") %>
