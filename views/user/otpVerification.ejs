    <style>
      /* Cult Classic Styling */
body {
    font-family: 'Courier New', Courier, monospace; /* Classic font */
    background-color: #f4f4f4;
    color: #333;
}

.container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 20px;
}

.login_wrap {
    background-color: #ffffff;
    border-radius: 10px;
    padding: 40px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
}

.login_wrap:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
}

.heading_s1 h3 {
    text-align: center;
    font-size: 26px;
    font-weight: bold;
    color: #333;
    letter-spacing: 2px;
    margin-bottom: 20px;
    text-transform: uppercase;
    text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    font-size: 14px;
    color: #666;
    letter-spacing: 1px;
}

.form-group input {
    width: 100%;
    padding: 10px 15px;
    font-size: 16px;
    border-radius: 5px;
    border: 1px solid #ddd;
    transition: border-color 0.3s ease;
}

.form-group input:focus {
    border-color: #333;
    outline: none;
    box-shadow: 0 0 8px rgba(51, 51, 51, 0.2);
}

.btn {
    width: 100%;
    padding: 12px;
    font-size: 16px;
    text-transform: uppercase;
    font-weight: bold;
    letter-spacing: 1px;
    cursor: pointer;
    border-radius: 5px;
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

.btn-primary {
    background-color: #007bff;
    color: #fff;
    border: none;
}

.btn-primary:hover {
    background-color: #0056b3;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
}

.btn-secondary {
    background-color: #6c757d;
    color: #fff;
    margin-top: 15px;
}

.btn-secondary:hover {
    background-color: #5a6268;
    box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
}

.text-center {
    text-align: center;
}

.text-muted {
    color: #6c757d;
}

.otp-timer {
    font-size: 18px;
    font-weight: bold;
    letter-spacing: 1px;
    color: #333;
    margin-top: 10px;
}

/* Adding vintage feel */
@media (max-width: 768px) {
    .login_wrap {
        padding: 20px;
        width: 90%;
    }
}

    </style>
