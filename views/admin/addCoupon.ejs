  <input type="number" id="usageLimit" name="usageLimit">

  <label for="perUserLimit">Per User Usage Limit:</label>
  <input type="number" id="perUserLimit" name="perUserLimit">

  <label for="isActive">Active:</label>
  <input type="checkbox" id="isActive" name="isActive" checked>

  <button type="submit" class="submit-btn">Create Coupon</button>
</form>
