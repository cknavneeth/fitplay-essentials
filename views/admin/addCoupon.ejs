document.getElementById('couponForm').addEventListener('submit', function (e) {
  e.preventDefault(); // Prevent default form submission

  // Clear any previous error messages
  const errorContainer = document.getElementById('errorContainer');
  errorContainer.innerHTML = '';

  // Get form values
  const code = document.getElementById('code').value.trim();
  const discountType = document.getElementById('discountType').value;
  const discountAmount = parseFloat(document.getElementById('discountAmount').value);
  const minPurchaseAmount = parseFloat(document.getElementById('minPurchaseAmount').value);
  const expirationDate = document.getElementById('expirationDate').value;
  const maxDiscount = parseFloat(document.getElementById('maxDiscount').value);
  const usageLimit = parseInt(document.getElementById('usageLimit').value);
  const perUserLimit = parseInt(document.getElementById('perUserLimit').value);

  const errors = [];

  // Validate coupon code
  if (!code) errors.push('Coupon Code is required.');
  if (!/^[A-Za-z0-9]{3,10}$/.test(code)) {
    errors.push('Coupon Code must contain valid characters.');
  }

  // Validate discount type and related fields
  if (!discountType) errors.push('Discount Type is required.');
  if (discountType === 'percentage' && (isNaN(maxDiscount) || maxDiscount <= 0||maxDiscount>=100)) {
    errors.push('Please enter a valid maximum discount that is applicable');
  }
  if (discountAmount <= 0 || isNaN(discountAmount)) {
    errors.push('Discount Amount must be greater than 0.');
  }

  // Validate minimum purchase amount
  if (minPurchaseAmount <= 0 || isNaN(minPurchaseAmount)) {
    errors.push('Minimum Purchase Amount must be greater than 0.');
  }

  // Validate expiration date
  const today = new Date();
  const expDate = new Date(expirationDate);
  if (!expirationDate) {
    errors.push('Expiration Date is required.');
  } else if (expDate <= today) {
    errors.push('Expiration Date must be in the future.');
  }

  // Display errors or submit form
  if (errors.length > 0) {
    errorContainer.innerHTML = errors.map((err) => `<p>${err}</p>`).join('');
  } else {
    // Submit form data using fetch
    const formData = {
      code,
      discountType,
      discountAmount,
      minPurchaseAmount,
      expirationDate,
      maxDiscount: maxDiscount || null,
      usageLimit: usageLimit || null,
      perUserLimit: perUserLimit || null,
      isActive: document.getElementById('isActive').checked,
    };

    console.log('Form Data:', formData); // Debugging purpose

    // Submit form data to server
    fetch('/adminAddCoupon', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(formData),
    })
      .then((response) => response.json())
      .then((result) => {
        if (result.success) {
          Swal.fire({
            icon:'success',
            title:'coupon added successfully',
            text:'You created It'
          })
          .then(()=>{
            window.location.href = '/adminCoupons';
          })
         
        } else {
          errorContainer.innerHTML = `<p>${result.error || 'Failed to create coupon.'}</p>`;
        }
      })
      .catch((error) => {
        console.error('Error submitting form:', error);
        errorContainer.innerHTML = `<p>An unexpected error occurred.</p>`;
      });
  }
});

// Enable/disable maxDiscount based on discountType
document.getElementById('discountType').addEventListener('change', function () {
  const maxDiscountField = document.getElementById('maxDiscount');
  if (this.value === 'percentage') {
    maxDiscountField.disabled = false;
    maxDiscountField.required = true;
  } else {
    maxDiscountField.disabled = true;
    maxDiscountField.required = false;
    maxDiscountField.value = ''; // Clear value if not applicable
  }
});


