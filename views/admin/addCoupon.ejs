<h2 class="form-title">Create a New Coupon</h2>
<form action="/admin/coupons" method="POST" class="coupon-form"  id="couponForm">
  <label for="code">Coupon Code:</label>
  <input type="text" id="code" name="code" required>

  <label for="discountType">Discount Type:</label>
  <select id="discountType" name="discountType" required>
    <option value="percentage">Percentage</option>
    <option value="fixed">Fixed Amount</option>
  </select>

  <label for="discountAmount">Discount Amount:</label>
  <input type="number" id="discountAmount" name="discountAmount">

  <label for="minPurchaseAmount">Minimum Purchase Amount:</label>
  <input type="number" id="minPurchaseAmount" name="minPurchaseAmount" required>

  <label for="expirationDate">Expiration Date:</label>
  <input type="date" id="expirationDate" name="expirationDate" required>

  <label for="maxDiscount">Maximum Discount (for percentage discounts):</label>
  <input type="number" id="maxDiscount" name="maxDiscount">

  <label for="usageLimit">Total Usage Limit:</label>
  <input type="number" id="usageLimit" name="usageLimit">

  <label for="perUserLimit">Per User Usage Limit:</label>
  <input type="number" id="perUserLimit" name="perUserLimit">

  <label for="isActive">Active:</label>
  <input type="checkbox" id="isActive" name="isActive" checked>

  <button type="button" class="submit-btn" onclick="submitCouponForm()">Create Coupon</button>
</form>
