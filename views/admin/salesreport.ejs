<script>
    document.getElementById('downloadExcelButton').addEventListener('click', function () {
        // Get data from the form or HTML structure
        const reportData = [
            ['Field', 'Value'], // Header row
            ['Total Orders', document.querySelector('input[name="total_orders"]').value],
            ['Total Amount', document.querySelector('input[name="total_amount"]').value],
            ['Total Coupon Discount', document.querySelector('input[name="total_coupon_discount"]').value],
            ['Total Delivered Orders', document.querySelector('input[name="total_delivered_orders"]').value],
            ['Total Returned Orders', document.querySelector('input[name="total_returned_orders"]').value],
            ['Total Shipped Orders', document.querySelector('input[name="total_shipped_orders"]').value],
            ['Product Offer', document.querySelector('input[name="product_offer"]').value],
        ];

        // Create a worksheet
        const worksheet = XLSX.utils.aoa_to_sheet(reportData);

        // Create a workbook and append the worksheet
        const workbook = XLSX.utils.book_new();
        XLSX.utils.book_append_sheet(workbook, worksheet, 'Sales Report');

        // Save the workbook as an Excel file
        XLSX.writeFile(workbook, 'sales-report.xlsx');
    });
</script>




